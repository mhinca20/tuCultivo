<p id="notice"><%= notice %></p>

<h1>Nodes</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Reference</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @nodes.each do |node| %>
      <tr>
        <td><%= node.name %></td>
        <td><%= node.reference %></td>
        <td><%= link_to 'Show', node %></td>
        <td><%= link_to 'Edit', edit_node_path(node) %></td>
        <td><%= link_to 'Destroy', node, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<a class="btn-floating btn-large waves-effect waves-light green" <%= link_to '+', new_node_path %><i class="material-icons"></i></a>
