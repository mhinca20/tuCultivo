<div class="center">
  <p id="notice"><%= notice %></p>

  <h2>Lotes del cultivo: <%= @farm.name%></h2>
  <h4>Identificador del cultivo: <%= @farm.id%></h4>

  <%= link_to 'Crear lote', new_farm_lot_path, {style:'color:#FFFFFF;',class:'btn btn-success right-button'} %>
  <%= link_to 'Volver', farms_path , {style:'color:#FFFFFF;',class:'btn btn-danger right-button'} %>
  <% if @lots.present? %>
    <table class="table">
      <thead>
        <tr>
          <th>Identificador</th>
          <th>Nombre</th>
          <th>Ubicaci√≥n</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @lots.each do |lot| %>
          <tr>
            <td><%= lot.id %></td>
            <td><%= lot.name %></td>
            <td><%= lot.location %></td>
            <td><%= link_to 'Ver surcos', farm_lot_grooves_path(lot_id: lot.id) %> </td>
            <td><%= link_to 'Editar', edit_farm_lot_path(id: lot.id) %></td>
