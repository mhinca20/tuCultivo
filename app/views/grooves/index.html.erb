<p id="notice"><%= notice %></p>

<h1>Surcos</h1>
<a class="btn-floating btn-large waves-effect waves-light green" <%= link_to '+', new_farm_lot_groofe_path %><i class="material-icons"></i></a>
<td><%= link_to 'Volver', farm_lots_path %></td>
<table>
  <thead>
    <tr>
      <th>Cantidad</th>
      <th>Lote</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @grooves.each do |groofe| %>
      <tr>
        <td><%= groofe.quantity %></td>
        <td><%= groofe.lot.name %></td>
        <td><%= link_to 'Ver reportes', farm_lot_groofe_plague_reports_path(groofe_id: groofe.id) %></td> 
        <td><%= link_to 'Editar', edit_farm_lot_groofe_path(id: groofe.id) %></td>
        <td><%= link_to 'Destruir', controller: "grooves", method: "destroy", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

